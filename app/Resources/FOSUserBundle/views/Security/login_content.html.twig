{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="provincial-div container">
    <h6 class="mt-2 text-info">INTRANET PROVINCIAL</h6>
    <p class="text-secondary">Secretaría de Tecnología para la Gestión <br>
    Ministerio de Gobierno y Reforma del Estado</p>
</div>
<div class="login-div container-fluid">
    <div class="login-div-purple">
        Acceso centralizado a sistemas
    </div>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        {# Usuario #}
        <div class="row">
            <div class="mx-auto container-fluid">
                <div class="form-group">
                    <label>USUARIO - EMAIL:</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                </div>
            </div>
        </div>
        {# Contraseña #}
        <div class="row">
            <div class="mx-auto  container-fluid">
                <div class="form-group">
                    <label>CONTRASEÑA:</label>
                    <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" />
                </div>
                <div class="text-right">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                <div>
                    <input type="submit" class="btn btn-success container-fluid m-top" id="_submit" name="_submit" value="INICIAR SESIÓN" />
                </div>
            </div>
        </div>
        {# Olvidaste tu contraseña? #}
        <div class="m-top">
            <a class="text-info" href="{{path('fos_user_resetting_request')}}"><b>¿Olvidaste tu contraseña?<i class="ml-1 fas fa-question-circle"></i></b></a>
            <br>
            <div class="m-top">
                <p>
                    Cierre su sesión y el navegador al finalizar.
                    Recuerde que con su usuario puede acceder a
                    múltiples sistemas provinciales.
                </p>
            </div>
        </div>
    </form>
</div>

               


                

               

                
            
            
